extends ./layouts/userlayout.pug

block content
    .row
        .col-md-8.offset-md-2
            h3.text-center List User
            a.btn.btn-primary.mb-2(href="/users/create") Create
            table.table.table-bordered
                thead
                    th(scope='col') Name
                    th(scope='col') Phone
                    th(scope='col') View
                each user in users
                    tbody 
                        td=user.name
                        td=user.phone
                        td
                            a(href='/users/' + user.id) view
